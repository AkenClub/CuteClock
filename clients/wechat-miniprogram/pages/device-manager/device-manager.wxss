.device-manager-container {
  color: #708cbb;
  padding: 30rpx 0;
}

/* 下拉刷新提示样式 */
.refresh-tip {
  text-align: center;
  margin-bottom: 10rpx;
}

.refresh-tip-text {
  font-size: 24rpx;
  color: #708cbb;
  opacity: 0.7;
}

.van-dialog__message-text {
  color: #8ec3fe;
}

.device-manager-container .van-button--default {
  background: #222c45 !important;
  color: #8ec3fe !important;
}

.slider {
  margin: 40rpx 15rpx 0;
}

.slider-bright-level {
  width: 40rpx;
  height: 40rpx;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;
  text-align: center;
  border-radius: 50%;
  color: #708cbb;
  background-color: #8ec3fe;
}

.device-title {
  display: block;
  margin: 30rpx 30rpx;
}

.normal-item-wrapper {
  height: 230rpx !important;
  padding: 20rpx !important;
  border-radius: 20rpx;
  background-color: #222c45 !important;
}

.light-item-wrapper {
  display: flex;
  justify-content: space-between;
}

.light-item-wrapper_right {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.light-item-wrapper_left {
  display: flex;
  align-items: center;
}

.light-item_title {
  font-size: small;
  margin-bottom: 40rpx;
}

.item_image {
  height: 110rpx;
  width: 110rpx;
}

.clock-item-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.clock-item-wrapper_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: small;
}

/* 温度显示相关样式 */
.temperature-item-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.temperature-item-wrapper_left {
  display: flex;
  align-items: center;
}

.temperature-item-wrapper_right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  flex: 1;
}

.temperature-item_title {
  font-size: small;
  margin-bottom: 20rpx;
  color: #708cbb;
}

.temperature-display {
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
}

.temperature-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #8ec3fe;
  margin-right: 8rpx;
}

.temperature-unit {
  font-size: 24rpx;
  color: #708cbb;
}
